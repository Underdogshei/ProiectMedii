<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProiectMedii.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProiectMedii"
    Shell.FlyoutBehavior="Disabled"
    Title="ProiectMedii">

    <TabBar>
        <ShellContent 
            Title="Welcome" 
            ContentTemplate="{DataTemplate local:MainPage}" 
             />

        <ShellContent 
            Title="My Service Lists" 
            ContentTemplate="{DataTemplate local:ListEntryPage}" 
             />

        <ShellContent 
            Title="Services"  
            ContentTemplate="{DataTemplate local:ShopEntryPage}"  
             />

        <ShellContent 
            Title="About" 
            ContentTemplate="{DataTemplate local:About}" 
             />

    </TabBar>
</Shell>
